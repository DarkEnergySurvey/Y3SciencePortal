<?xml version="1.0" encoding="UTF-8"?>
<config>
  <section id="Columns">
    <subsection id="From the Photometric Sample">
      <checkbox description="" type="string" name="RA" value="RA" id="ra"/>
      <checkbox description="" type="string" name="DEC" value="DEC" id="dec"/>
      <checkbox description="" type="string" name="MAG_AUTO_[GRIZY]" value="MAG_AUTO_[GRIZY]" id="auto"/>
      <checkbox description="" type="string" name="MAG_DETMODEL_[GRIZY]" value="MAG_DETMODEL_[GRIZY]" id="detmodel"/>
      <checkbox description="" type="string" name="SPREAD_MODEL_[GRIZY]" value="SPREAD_MODEL_[GRIZY]" id="spread_model"/>
    </subsection>
    <subsection id="From the Spectroscopic Sample">
      <checkbox description="" type="spect" name="Z" value="Z" id="Z"/>
      <checkbox description="" type="spect" name="Z_ERR" value="Z_ERR" id="Z_ERR"/>
      <checkbox description="" type="spect" name="SURVEY" value="SURVEY" id="SURVEY"/>
      <checkbox description="" type="spect" name="FLAG_SOURCE" value="FLAG_SOURCE" id="FLAG_SOURCE"/>
      <checkbox description="" type="spect" name="FLAG_DES" value="FLAG_DES" id="FLAG_DES"/>
    </subsection>
    <subsection id="Others"/>
  </section>
  <section id="Photometric Sample">
    <subsection id="Photometric Correction">
      <scalar description="" type="string" name="Apply photometric correction" value="2" id="photo_correction"/>
    </subsection>
    <subsection id="Magnitude limit cuts">
      <scalar description="" type="string" name="Magnitude type" value="AUTO" id="photo_type"/>
      <scalar description="" type="string" name="Maglim cut in g" value="None" id="maglim_cut_g"/>
      <scalar description="" type="string" name="Maglim cut in r" value="None" id="maglim_cut_r"/>
      <scalar description="" type="string" name="Maglim cut in i" value="None" id="maglim_cut_i"/>
      <scalar description="" type="string" name="Maglim cut in z" value="None" id="maglim_cut_z"/>
      <scalar description="" type="string" name="Maglim cut in Y" value="None" id="maglim_cut_Y"/>
    </subsection>
    <subsection id="Signal-to-noise cuts">
      <scalar description="" type="string" name="S/N cut in g" value="None" id="sn_cut_g"/>
      <scalar description="" type="string" name="S/N cut in r" value="None" id="sn_cut_r"/>
      <scalar description="" type="string" name="S/N cut in i" value="None" id="sn_cut_i"/>
      <scalar description="" type="string" name="S/N cut in z" value="None" id="sn_cut_z"/>
      <scalar description="" type="string" name="S/N cut in Y" value="None" id="sn_cut_Y"/>
    </subsection>
    <subsection id="Color cuts">
      <scalar description="" type="string" name="g-r color limits" value="-2.,4." id="color_cut_gr"/>
      <scalar description="" type="string" name="r-i color limits" value="-2.,3.5" id="color_cut_ri"/>
      <scalar description="" type="string" name="i-z color limits" value="-2,3." id="color_cut_iz"/>
      <scalar description="" type="string" name="z-Y color limits" value="None" id="color_cut_zY"/>
    </subsection>
    <subsection id="SExtractor Flags">
      <scalar description="" type="string" name="Reference band" value="i" id="flags_refband"/>
      <checkbox description="" type="flags" name="0 - Clean object" value="0 - Clean object" id="FLAG_0"/>
    </subsection>
    <subsection id="Niter model cut">
      <scalar description="" type="string" name="Cut in Niter model greater than zero in all bands?" value="No" id="niter_cut"/>
    </subsection>
    <subsection id="Star Galaxy Separation">
      <scalar description="" type="string" name="Band for SG separation if process was selected" value="i" id="sg_band"/>
    </subsection>
  </section>
  <section id="Matching with Spectroscopic Sample">
    <subsection id="">
      <scalar description="" type="float" name="Search radius for matching (arcsec)" value="1.0" id="radius"/>
    </subsection>
  </section>
</config>
